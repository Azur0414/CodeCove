<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>

    
<h3>멘토신청자 리스트</h3>
	
	<div class="container-fluid">
		<div class="">
			<p>단어 검색</p>
			<input type="text" id="searchWord" name="searchWord" class="form-control" placeholder="검색어를 입력해주세요">
		</div>
		<div class="row">
			<ul class="form-group"> 
				<li>기간별 검색 : </li> 
				<li>
					<input type="radio"> 1일
				</li>
				<li>
					<input type="radio"> 1주일
				</li>
				<li>
					<input type="radio"> 1개월
				</li>
				<li>
					<input type="radio"> 3개월
				</li>
				<li>
					<input type="date"> 
					~ 
					<input type="date">
				</li>
				<li>
					 <select>
					 	<option>접수코드</option>
					 </select>
				</li>
				<li>
					<select>
					 	<option>처리담당자</option>
			 		</select>
				</li>
			</ul>
		</div>
	</div>

	<div>
		 
	</div>
	<div class="card">
		<table id="datatable" class="table mt-0 table-striped table-card table-nowrap">
			<thead class="text-uppercase small text-body-secondary">
				<tr>
					<td>신청번호</td>
					<td>회원아이디</td>
					<td>접수코드</td>
					<td>신청날짜</td>
				</tr>
			</thead>
		<tbody id="tbody">
			<c:forEach items="${expList }" var="exp">
				<tr id="trs">
					<td>${exp.expFormNum } </td>
					<td>${exp.formId } </td>
					<td>${exp.comCodeNm }	</td>
					<td><fmt:formatDate value="${exp.expRegDate }" pattern="yyyy-MM-dd"/></td>
				</tr>
			</c:forEach>
		</tbody>
		</table>
	</div>


<script>
$(document).ready(function () {
	const tbody = $("#tbody");
	const trs = $("#trs");	
	const formNum = $("formNum");
	
	$("#tbody").on("click", "#trs", function() {
		let FrmNum = $(this).find("td:eq(0)").html();
		location.href = "/coco/admin/expApplyDetail?expFormNum=" + FrmNum;
	});

	
});

</script>
