<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>

    
<h3>멘토신청자 리스트</h3>

	<div class="card">
		<table id="datatable" class="table mt-0 table-striped table-card table-nowrap">
			<thead class="text-uppercase small text-body-secondary">
				<tr>
					<td>신청번호</td>
					<td>회원아이디</td>
					<td>접수코드</td>
					<td>신청날짜</td>
				</tr>
			</thead>
		<tbody id="tbody">
			<c:forEach items="${expList }" var="exp">
				<tr id="trs">
					<td>${exp.expFormNum } </td>
					<td>${exp.formId } </td>
					<td>
						${exp.expApprCode } 
					</td>
					<td>${exp.expRegDate } </td>
				</tr>
			</c:forEach>
		</tbody>
		</table>
	</div>

<c:forEach items="${ codeList}" var="code" >
	${code.comCode }
	${code.comCodeNm }
</c:forEach>


<script>
$(document).ready(function () {
	const tbody = $("#tbody");
	const trs = $("#trs");	
	const formNum = $("formNum");
	
	$("#tbody").on("click", "#trs", function() {
		let FrmNum = $(this).find("td:eq(0)").html();
		location.href = "/coco/admin/expApplyDetail?expFormNum=" + FrmNum;
	});
	
	
	$('#datatable').DataTable({
		"filter" : true
	});
	
});

</script>
